# Home Assistant Secrets
# Copy this file to secrets.yaml and fill in your values
# Keep this file secure - contains sensitive API keys and credentials
# DO NOT commit secrets.yaml to version control

# ============================================
# ALARM SYSTEM (DSC via Envisalink)
# ============================================
dsc_alarm_code: "your_alarm_code"
dsc_master_code: "your_master_code"

# ============================================
# CAMERA CREDENTIALS
# ============================================
# Amcrest cameras (Front Door, Backyard)
amcrest_username: admin
amcrest_password: "your_amcrest_password"

# EZVIZ Indoor camera
ezviz_password: "your_ezviz_password"

# ============================================
# MQTT BROKER
# ============================================
mqtt_username: homeassistant
mqtt_password: "your_mqtt_password"

# ============================================
# TELEGRAM BOT
# ============================================
# Create bot via @BotFather on Telegram
# Get chat ID: curl -s "https://api.telegram.org/bot<TOKEN>/getUpdates" | jq '.result[].message.chat.id'
telegram_bot_token: "your_bot_token"
telegram_family_chat_id: "your_chat_id"

# ============================================
# GUEST ACCESS SYSTEM
# ============================================
guest_pass_secret: "your_unique_secret_key"

# ============================================
# TUYA (Gate Switch)
# ============================================
# Get from HA integration config entry
tuya_config_entry_id: "your_tuya_config_entry_id"

# ============================================
# NABU CASA / EXTERNAL ACCESS
# ============================================
nabu_casa_url: "https://your-instance.ui.nabu.casa"
local_server_ip: "192.168.x.x"

# ============================================
# TMDB API (Media Library)
# ============================================
# Get from https://www.themoviedb.org/settings/api
tmdb_api_key: "your_tmdb_api_key"
