# Home Automation Stack Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit the .env file to version control

# ============================================
# GENERAL
# ============================================
TZ=Your/Timezone
HOMELAB_NETWORK=homelab_network

# ============================================
# MQTT BROKER
# ============================================
MQTT_USER=your_mqtt_user
MQTT_PASS=your_mqtt_password

# ============================================
# CAMERA CREDENTIALS & IPs
# ============================================
# Amcrest cameras
AMCREST_USER=admin
AMCREST_PASS=your_amcrest_password

# EZVIZ Indoor camera
EZVIZ_USER=admin
EZVIZ_PASS=your_ezviz_password

# ============================================
# FRIGATE CAMERA CONFIG
# ============================================
# MQTT credentials (passed to Frigate container)
FRIGATE_MQTT_USER=your_mqtt_user
FRIGATE_MQTT_PASSWORD=your_mqtt_password

# Amcrest cameras - Frigate uses {VAR} interpolation
FRIGATE_AMCREST_USER=admin
FRIGATE_AMCREST_PASS=your_amcrest_password
FRIGATE_FRONT_DOOR_IP=192.168.x.x
FRIGATE_BACKYARD_IP=192.168.x.x

# EZVIZ camera
FRIGATE_EZVIZ_USER=admin
FRIGATE_EZVIZ_PASS=your_ezviz_password
FRIGATE_EZVIZ_IP=192.168.x.x

# Server IP for WebRTC
FRIGATE_SERVER_IP=192.168.x.x

# ============================================
# WYZE BRIDGE
# ============================================
WYZE_EMAIL=your_wyze_email
WYZE_PASSWORD=your_wyze_password
WYZE_API_ID=your_wyze_api_id
WYZE_API_KEY=your_wyze_api_key

# ============================================
# COMPREFACE (Face Recognition)
# ============================================
COMPREFACE_DB_PASS=your_compreface_db_password
COMPREFACE_API_KEY=your_compreface_api_key

# ============================================
# DOUBLE TAKE
# ============================================
DOUBLETAKE_TOKEN=your_doubletake_token

# ============================================
# TMDB (Media Library)
# ============================================
TMDB_API_KEY=your_tmdb_api_key

# ============================================
# HOME ASSISTANT
# ============================================
HA_TRUSTED_PROXIES=172.16.0.0/12
